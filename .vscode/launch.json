    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Vite (Laravel)",
            "url": "http://localhost:8000", // URL Vite
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "vite:///*": "${webRoot}/*",
                "/resources/*": "${workspaceFolder}/resources/*",
                "webpack://_N_E/*": "${workspaceFolder}/*"
            }
        }
    ]
}